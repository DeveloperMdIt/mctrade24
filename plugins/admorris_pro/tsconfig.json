{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src/js",
    "paths": {
      "*": ["./*", "node_modules/*"]
    },
    "noEmit": true
  },
  "include": ["src/js/**/*", "eslint.config.mjs"],
  "exclude": ["node_modules", "bower_components"]
}
