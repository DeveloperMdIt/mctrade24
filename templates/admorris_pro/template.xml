<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Template isFullResponsive="true">
    <Name>admorris Pro</Name>
    <Author>admorris</Author>
    <URL>https://admorris.pro</URL>
    <Version>3.1.9</Version>
    <ShopVersion>5.5.0</ShopVersion>
    <Preview>preview.png</Preview>
    <Description>admorris Pro Template</Description>
    <Framework>Bootstrap4</Framework>
    <Settings>
        <Section Name="Allgemein" Key="general">
            <Setting Description="Komprimierung von JavaScript- und CSS-Dateien" Key="use_minify" Type="select" Value="static">
                <Option Value="Y">Ja</Option>
                <Option Value="static">Ja, statisch</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <!-- JTL Plugins wie dhl wunsschpaket fragen die $isNova Smarty Variable ab, die gesetzt wird, wenn diese Einstellung existiert  -->
            <Setting Description="Ist Nova Template" Key="is_nova" Type="text" Value="Y" Editable="false"/>
            <Setting Description="Progressives Laden von Bildern" Key="progressive_loading" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Benutzerdefinierte Template-Dateien verwenden? (veraltet, bitte Child-Templates nutzen)" Key="use_customtpl" Type="select" Value="N">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja</Option>
            </Setting>
            <Setting Description="Eigenes Favicon" Key="new_favicon" Type="text" Value="">
            </Setting>
            <Setting Description="Laden von FontAwesome4 Icons" Key="use_font_awesome_4" Type="select" Value="N">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja</Option>
            </Setting>
        </Section>

        <Section Name="Theme" Key="theme">
            <!-- <Setting Description="Fullscreen Slider" Key="slider" Type="select" Value="fullscreen">
                <Option Value="default"><![CDATA[Default - Bildgr&ouml;&szlig;e bestimmt Sliderh&ouml;he]]></Option>
<Option Value="fullscreen"><![CDATA[Fullscreen - Slider f&uuml;llt das Browserfenster]]></Option>
<Option Value="fullscreen_framed"><![CDATA[Fullscreen mit wei&szlig;em Rahmen]]></Option>

</Setting> -->


            <!-- <Setting Description="Transparenter Header (wenn Fullscreen Slider aktiv)" Key="transparent_header" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting> -->
            <Setting Description="Header Design Typ" Key="header_design" Type="select" Value="custom">
                <Option Value="custom">Custom</Option>
            </Setting>

            <Setting Description="Warenkorb Dropdown Bilder" Key="cart_dropdown_images" Type="select" Value="large">
                <Option Value="large"><![CDATA[gro&szlig;]]></Option>
                <Option Value="small">klein</Option>
                <Option Value="false">deaktiviert</Option>
            </Setting>
            <!-- <Setting Description="Shop-Menü Labels" Key="shopmenu_labels" Type="select" Value="icons_text">
                <Option Value="icons_text">Symbole + Text</Option>
                <Option Value="icons">Nur Symbole</Option>
                <Option Value="text">Nur Text</Option>
            </Setting> -->

            <Setting Description="Theme" Key="theme_default" Type="select" Value="admorris">
                <Option Value="admorris">admorris</Option>
            </Setting>
            <!-- <Setting Description="Hintergrundbild (überschreibt die vorhandene Standard-Evo-Einstellung)" Key="background_image" Type="select" Value="">
                <Option Value="background">Mein Hintergrundbild</Option>
            </Setting> -->
            <Setting Description="Full-Width Slider?" Key="slider_full_width" Type="select" Value="N">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja (funktioniert nur in Kombination mit Boxed Layout = Nein)</Option>
            </Setting>
            <Setting Description="Full-Width Banner?" Key="banner_full_width" Type="select" Value="N">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja (funktioniert nur in Kombination mit Boxed Layout = Nein)</Option>
            </Setting>
            <Setting Description="Linke Seitenleiste anzeigen" Key="left_sidebar" Type="select" Value="N">
                <Option Value="N">Nur auf Artikellisten</Option>
                <Option Value="Y">Auf allen Seiten</Option>
            </Setting>
            <Setting Description="Mitlaufendes Header-Megamenü?" Key="static_header" Type="select" Value="Y">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja</Option>
            </Setting>
            <Setting Description="Hintergrundfarbe" Key="backgroundcolor" Type="text" Value="#eee"/>
            <Setting Description="Favicon" Key="favicon" Type="upload" Value="favicon.ico" maxFileSize="123456" showPreview="false" allowedFileExtensions="['ico','png']" accept="image/*" target="favicon/" targetFileName="favicon.ico"/>
            <Setting Description="Warenkorb-Mengen-Optionen in Dropdown anzeigen?" Key="qty_modify_dropdown" Type="select" Value="N">
                <Option Value="N">Nein</Option>
                <Option Value="Y">Ja</Option>
            </Setting>
            <Setting Description="Boxed Layout?" Key="pagelayout" Type="select" Value="fluid">
                <Option Value="fluid">Nein (deutliche Trennung zwischen Header, Inhalt und Footer)</Option>
                <Option Value="boxed">Ja (Header, Inhalt, Footer werden einheitlich in eine Box eingefasst)</Option>
            </Setting>
        </Section>
        <Section Name="Megamenu" Key="megamenu">
            <Setting Description="Kategorien (anstelle einer Kategoriebox / Boxenverwaltung)" Key="show_categories" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Hauptkategorie Infobereich" Key="show_maincategory_info" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Kategoriebilder" Key="show_category_images" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Unterkategorien" Key="show_subcategories" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
        </Section>
        <Section Name="Listen- und Galerieansicht" Key="productlist">
            <Setting Description="Auswahloptionen bei „Filter anzeigen in (Desktop)“" Key="filter_placement" Type="select" Value="sidebar">
                <Option Value="sidebar">Seitenleiste (Einstellung einzelner Filter unter „Standardelemente > Footer /Boxen“ und „Standardansichten > Artikelübersicht“)</Option>
                <Option Value="modal">Offcanvas (Einstellung einzelner Filter unter „Standardansichten > Artikelübersicht“)</Option>
            </Setting>
            <Setting Description="Suchfeld in Filtern anzeigen ab x Einträgen" Key="filter_search_count" Type="number" Value="20"/>
            <Setting Description="Filter immer ausgeklappt" Key="filter_items_always_visible" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="aus der Liste heraus einkaufen? (&lt;small&gt;zeigt den Warenkorb-Button in den Artikellisten an&lt;/small&gt;)" Key="buy_productlist" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Hovereffekt für Zusatzinfos (&lt;small&gt;zeigt Details zum Artikel in einer Hover-Box oder per Tap auf Touchdisplays&lt;/small&gt;)" Key="hover_productlist" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Artikel Overlays" Key="overlays" Type="select" Value="text">
                <Option Value="text">Text Overlays</Option>
                <Option Value="image"><![CDATA[Bild Overlays (&uuml;ber JTL-Shop Backend einstellbar)]]></Option>
            </Setting>
            <Setting Description="Variationsauswahl anzeigen (&lt;small&gt;Nur in Verbindung mit &quot;Hovereffekt für Zusatzinfos&quot;&lt;/small&gt;" Key="variation_select_productlist" Type="select" Value="N">
                <Option Value="N"><![CDATA[Nein]]></Option>
                <Option Value="1"><![CDATA[max. 1]]></Option>
                <Option Value="2"><![CDATA[max. 2]]></Option>
                <Option Value="3"><![CDATA[max. 3]]></Option>
                <Option Value="5"><![CDATA[max. 5]]></Option>
                <Option Value="9999"><![CDATA[keine Beschr&auml;nkung]]></Option>
            </Setting>
            <Setting Description="Anzahl der möglichen Variationswerte für Radio und Swatches. (&lt;small&gt;Nur in Verbindung mit &quot;Variationsauswahl anzeigen&quot;&lt;/small&gt;)" Key="variation_max_werte_productlist" Type="select" Value="3">
                <Option Value="3"><![CDATA[max. 3]]></Option>
                <Option Value="5"><![CDATA[max. 5]]></Option>
                <Option Value="9"><![CDATA[max. 9]]></Option>
                <Option Value="12"><![CDATA[max. 12]]></Option>
                <Option Value="9999"><![CDATA[keine Beschr&auml;nkung]]></Option>
            </Setting>
            <Setting Description="Filteroptionen bei Seitenanruf anzeigen?" Key="initial_display_filter" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Anzahl der sichtbaren Filteroptionen in Boxen. (&lt;small&gt;weiter Optionen können eingeblendet werden&lt;/small&gt;)" Key="filter_max_options" Type="select" Value="5">
                <Option Value="3"><![CDATA[max. 3]]></Option>
                <Option Value="5"><![CDATA[max. 5]]></Option>
                <Option Value="9"><![CDATA[max. 9]]></Option>
                <Option Value="12"><![CDATA[max. 12]]></Option>
                <Option Value="-1"><![CDATA[keine Beschr&auml;nkung]]></Option>
            </Setting>
            <Setting Description="Banner Parallax Effekt" Key="banner_parallax" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
        </Section>
        <Section Name="Footer-Einstellungen" Key="footer">
            <Setting Description="Newsletter-Anmeldung im Footer" Key="newsletter_footer" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Social-Media-Buttons im Footer" Key="socialmedia_footer" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Facebook-Link" Key="facebook" Type="text" Value=""/>
            <Setting Description="Twitter-Link" Key="twitter" Type="text" Value=""/>
            <Setting Description="YouTube-Link" Key="youtube" Type="text" Value=""/>
            <Setting Description="Xing-Link" Key="xing" Type="text" Value=""/>
            <Setting Description="LinkedIn-Link" Key="linkedin" Type="text" Value=""/>
            <Setting Description="Vimeo-Link" Key="vimeo" Type="text" Value=""/>
            <Setting Description="Instagram-Link" Key="instagram" Type="text" Value=""/>
            <Setting Description="Pinterest-Link" Key="pinterest" Type="text" Value=""/>
            <Setting Description="Skype-Link" Key="skype" Type="text" Value=""/>
            <Setting Description="Twitch-Link" Key="twitch" Type="text" Value=""/>
        </Section>

    </Settings>
    <Minify>
        <JS Name="jtl3.js">
            <File Path="js/bootstrap.bundle.min.js"/>
            <File Path="js/bootstrap-toolkit.js"/>
            <File Path="js/bootstrap-select.min.js"/>
            <File Path="js/triggerEvent/bootstrap-loaded.js"/>
            <File Path="js/jquery.serialize-object.js"/>
            <File Path="js/slick.js"/>
            <File Path="js/triggerEvent/slick-loaded.js"/>
            <File Path="js/eModal.js"/>
            <File Path="js/jtl.evo.js"/>
            <File Path="js/jtl.io.js"/>
            <File Path="js/jtl.article.js"/>
            <File Path="js/jtl.basket.js"/>
            <File Path="js/triggerEvent/jtl-loaded.js"/>
            <File Path="js/typeahead.js"/>
            <File Path="js/triggerEvent/typeahead-loaded.js"/>
            <File Path="js/wow.min.js"/>
            <!-- TODO: load async -->
            <File Path="js/colcade.js"/>
            <!-- TODO: load async -->
            <File Path="js/slick-lightbox.min.js"/>
            <File Path="js/parallax.min.js"/>
            <File Path="js/Chart.js" DependsOnSettingGroup="CONF_PREISVERLAUF" DependsOnSetting="preisverlauf.preisverlauf_anzeigen" DependsOnSettingValue="Y"/>
            <File Path="js/jqcloud.js"/>
            <File Path="js/nouislider.min.js"/>
            <File Path="js/consent.js"/>
            <File Path="js/consent.youtube.js"/>
        </JS>
        <CSS Name="admorris.css">
            <File Path="styles/dummy.css" />
        </CSS>
    </Minify>
    <Boxes>
        <Container Position="left" Available="1"></Container>
        <Container Position="right" Available="0"></Container>
        <Container Position="top" Available="0"></Container>
        <Container Position="bottom" Available="1"></Container>
    </Boxes>
</Template>
